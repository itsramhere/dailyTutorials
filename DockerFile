# Start with a lightweight Node.js environment
FROM node:20-slim

# Prisma requires OpenSSL to work properly inside containers
RUN apt-get update -y && apt-get install -y openssl

# Set the working directory inside the container
WORKDIR /app

# Copy your package files first (this helps Docker cache dependencies)
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the Prisma schema and generate the client
COPY prisma ./prisma
RUN npx prisma generate

# Copy the rest of your code
COPY . .

# Compile TypeScript to JavaScript
RUN npm run build

# Expose the port Fastify is running on
EXPOSE 3000

# Tell Docker how to start your app
CMD ["npm", "start"]